{
  "name": "design-manual",
  "version": "0.3.0",
  "description": "Create a living client design language / style guide",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "template-js-browserify": "browserify template/scripts/index -t uglifyify",
    "template-css-sass": "node-sass template/styles/all.scss | cleancss",
    "template-js": "npm run template-js-browserify -- -o httpdocs/app.min.js",
    "template-css": "npm run template-css-sass -- -o httpdocs/all.min.css",
    "template-html": "jade template/templates/components.jade -o httpdocs",
    "watch-js": "watchify template/scripts/**/*.js -o httpdocs/app.min.js",
    "test": "tape test/*.js | faucet",
    "test-pages": "tape test/pages.js | faucet || true",
    "test-assets": "tape test/assets.js | faucet || true"
  },
  "author": "Eight Media",
  "license": "ISC",
  "dependencies": {
    "array-move": "^1.0.0",
    "async": "^1.5.0",
    "autoprefixer": "^6.0.3",
    "browserify": "^11.2.0",
    "clean-css": "^3.4.5",
    "cssmin": "^0.4.3",
    "faucet": "0.0.1",
    "jade": "^1.11.0",
    "marked": "^0.3.5",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "multiline": "^1.0.2",
    "mustache": "^2.2.0",
    "node-sass": "^3.3.3",
    "object-assign": "^4.0.1",
    "pretty": "^1.0.0",
    "slug": "^0.9.1",
    "slugify": "^0.1.1",
    "tape": "^4.2.1",
    "uglifyify": "^3.0.1",
    "validate": "^3.0.1"
  },
  "devDependencies": {
    "events": "^1.1.0",
    "is-there": "^4.1.0",
    "object-assign": "^4.0.1",
    "rimraf": "^2.4.3",
    "watchify": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EightMedia/design-manual.git"
  },
  "keywords": [
    "styleguide",
    "design",
    "manual"
  ],
  "bugs": {
    "url": "https://github.com/EightMedia/design-manual/issues"
  },
  "homepage": "https://github.com/EightMedia/design-manual#readme"
}
