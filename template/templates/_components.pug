//- table of contents
.table-of-contents
  ul.table-of-contents__list
    each component in locals.components
      li.table-of-contents__list__item 
          a.table-of-contents__list__item__link(href=('#' + component.id)) 
            | <svg width="7" height="11" viewBox="0 0 7 11" xmlns="http://www.w3.org/2000/svg">
            |   <path d="M6.872 5.807L1.858 10.87c-.085.087-.187.13-.304.13-.117 0-.218-.043-.304-.13L.128 9.738C.043 9.65 0 9.548 0 9.43c0-.118.043-.22.128-.307L3.716 5.5.128 1.877C.043 1.79 0 1.687 0 1.57c0-.12.043-.22.128-.308L1.25.13c.086-.087.187-.13.304-.13.117 0 .22.043.304.13l5.014 5.063c.085.086.128.19.128.307 0 .118-.043.22-.128.307z" fill-rule="nonzero" />
            | </svg>
            
            if component && component.meta
              | #{component.meta.name}
            else
              #{component.id}

//- components
.component-wrapper
  each component in locals.components

    if !component || !component.meta
      .component(class="js-section", id=(component.id))
        h3.component__title #{component['404']}
        .component__meta
        p.component__404 â€¼&nbsp;&nbsp;Component `#{component['404']}` not found.
        
    else
      .component(class="js-section is-loading", id=(component.id))
        if component.meta.name
          h3.component__title #{component.meta.name}


        if component.meta.description
          .component__description !{component.meta.description}

        input.hide(type='checkbox' name='source' id=('toggle-' + component.id) class="component__toggle")

        .component__meta

          label.component__meta__toggle(for=('toggle-' + component.id), class="js-code-toggle") code
          span.component__meta__file #{component.file}

          a.component__meta__link(href=component.libFile, target="_blank")
            | <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
            |   <path fill="#444" d="M24 26h-20v-16h4l4-4h-10c-0.57 0-2 1.478-2 2v20c0 0.816 0.8 2 2 2h24c0.342 0 2-1.088 2-2v-8l-4 2v4zM8 24c3.756-6.142 4.798-10 12-10v6l12-9.004-12-8.996v6c-13.268 0-12 16-12 16z"></path>
            | </svg>

        .component__code
          div.component__code__output
            h3.component__code__title HTML
            pre
              code.language-markup

        .component__preview(class="js-component-preview")
          span.component__preview__handle(class="js-component-preview-handle")
            | <svg width="5px" height="23px" viewBox="0 0 5 23" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            |   <g id="Group" fill="#000000">
            |     <circle id="Oval" cx="2.5" cy="2.5" r="2.5"></circle>
            |     <circle id="Oval" cx="2.5" cy="11.5" r="2.5"></circle>
            |     <circle id="Oval" cx="2.5" cy="20.5" r="2.5"></circle>
            |   </g>
            | </svg>
          iframe.component__preview__iframe(data-original=component.libFile frameborder="0" scrolling="no", height=component.height)